<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f2f3f7"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--        <TextView-->
        <!--            android:id="@+id/label"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:gravity="left|center_vertical"-->
        <!--            android:paddingLeft="5dp"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textSize="20dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/introTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자녀를 위해,"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toTopOf="@+id/searchFood"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/introTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어떤 선물가게를 찾고있나요?"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toTopOf="@+id/searchFood"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/shadow_top">
        </LinearLayout>
        <EditText
            android:id="@+id/searchFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/layout_background"
            android:hint="찾고 싶은 가게 검색"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingTop="3dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="3dp"
            app:layout_constraintBottom_toTopOf="@id/listView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/introTextView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"

            android:background="@drawable/shadow">
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:baselineAligned="false"
            app:layout_constraintStart_toEndOf="@+id/search_tab" />

    </LinearLayout>

</FrameLayout>